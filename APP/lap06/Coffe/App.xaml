<Application
    x:Class="Coffe.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Coffe"
    RequestedTheme="Light"
    >
    
    <Application.Resources>
        <Style TargetType="Image" x:Key="White Logo Style">
            <Setter Property="Source" Value="/Assets/LockScreenLogo.scale-200.png" />
            <Setter Property="Width" Value="150" />
            <Setter Property="Margin" Value="20,20,20,0" />
            <Setter Property="HorizontalAlignment" Value="Left" />

        </Style>

        <Style TargetType="Image" x:Key="IconImageStyle   ">
            <Setter Property="Height" Value=" 20" />
            <Setter Property="Width" Value=" 20" />
            <Setter Property="Margin" Value=" 0,0,10,0" />
            

        </Style>
        <Style TargetType="TextBlock" x:Key="LabelTextBlockStyle">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="20,20,20,0"/>
            

        </Style>
    </Application.Resources>
